  <div>
    <h1>My Todo List</h1>
</form>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/add-todo" method="POST">
            <div class="form-group">
              <label for="todotitle">Title*</label>
              <input type="text" name="todotitle" placeholder="New todo title" required>
            </div>
            <div class="form-group">
              <label for="description">Description*</label>
              <input type="text" name="description" placeholder="Todo description" required>
            </div>
            <div class="form-group">
              <label for="dueDate">Due Date*</label>
              <input type="date" name="dueDate">
            </div>
            <div class="form-group">
              <label for="priority">Priority*</label>
              <select name="priority">
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
              </select>
            </div>
            <div class="form-group">
              <label for="category">Category*</label>
              <select name="category">
                <option value="personal">Personal</option>
                <option value="work">Work</option>
                <option value="shopping">Shopping</option>
              </select>
            </div>
            <button type="submit">Add Todo</button>
            <!-- <button type="submit" class="btn btn-dark">Register</button> -->
          </form>
        </div>
      </div>
    </div>

    <div>
      <h2>Work</h2>
      <ul>
        <% workTodos.forEach(function(todo) { %>
          <li>
            <form action="/update-todo" method="POST" style="display: inline;">
              <!-- Include hidden field for todo_id -->
              <input type="hidden" name="todo_id" value="<%= todo.todo_id %>">
              
              <!-- Checkbox for completed status -->
              <input type="checkbox" name="completed" onChange="this.form.submit()" <%= todo.completed ? 'checked' : '' %>>
            </form>
    
            <!-- Display the todo details -->
            <%= todo.title %> 
            <%= todo.description %> 
            (Due: <%= todo.due_date %>, Priority: <%= todo.priority %>, Category: <%= todo.category %>)
    
            
            <form action="/delete-todo" method="POST" style="display: inline;">
              <input type="hidden" name="todo_id" value="<%= todo.todo_id %>">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }); %>
      </ul>
    </div>
