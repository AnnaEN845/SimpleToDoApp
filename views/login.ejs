<%- include('partials/header') %>

  <div class="container mt-4">

    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
      <div class="card large-card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Login</h2>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Email*</label>
              <input type="email" class="form-control" name="username" value="<%= typeof userInput !== 'undefined' ? userInput.username : '' %>">
            </div>
            <div class="form-group">
              <label for="password">Password*</label>
              <input type="password" class="form-control" name="password">
            </div>
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="error-msg mb-3">
                <%= error %>
              </div>
            <% } %>
            <button type="submit" class="btn btn-lg btn-dark btn-block btn-blue">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>