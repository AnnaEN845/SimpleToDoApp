<%- include('partials/header') %>

  <div class="container mt-4">

    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
      <div class="card large-card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Login</h2>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Email*</label>
              <input type="email" class="form-control" name="username" value="<%= typeof userInput !== 'undefined' ? userInput.username : '' %>">
            </div>
            <div class="form-group">
              <label for="password">Password*</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div id="error-messages">
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="error-msg mb-3">
                <%= error %>
              </div>
            <% } %>
          </div>
            <button type="submit" class="btn btn-lg btn-dark btn-block btn-blue"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z"/>
              <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708z"/>
            </svg> Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>